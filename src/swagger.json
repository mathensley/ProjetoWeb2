{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação da La Patisserie",
        "description": "Essa API tem como objetivo a manipulação dos produtos, clientes e funcionários.",
        "termsOfService": "http://localhost:3000/v1/terms",
        "contact": {
            "email": "levi.pereira.junior@ccc.ufcg.edu.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api",
            "description": "API de Teste"
        },
        {
            "url": "http://www.lapatisserie.com/v1",
            "description": "API em Produção"
        }
    ],
    "paths": {
        "/clients": {
            "post": {
                "summary": "Cadastro de cliente",
                "description": "Essa rota será responsável por cadastrar os clientes",
                "tags": ["Clients"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Client"
                            },
                            "examples": {
                                "client": {
                                    "value": {
                                        "name": "João Silva",
                                        "username": "joaosilva",
                                        "password": "senha123",
                                        "cpf": "123.456.789-00",
                                        "email": "joao@email.com",
                                        "phone": "999999999",
                                        "address": "Rua das Flores, 123",
                                        "city": "São Paulo",
                                        "state": "SP",
                                        "cep": "01010-000"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Cliente já existe"
                    },
                    "201": {
                        "description": "Cliente cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Client"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Buscar todos os clientes",
                "description": "Busca todos os clientes cadastrados",
                "tags": ["Clients"],
                "responses": {
                    "200": {
                        "description": "Lista de clientes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                         "$ref": "#/components/schemas/Client"
                                    }
                                }
                            }
                        }
                    }
                }
            } 
        },
        "/clients/{id}": {
            "delete": {
                "summary": "Deleta um cliente",
                "description": "Deleta um cliente pelo seu id",
                "tags": ["Clients"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description":"Id do cliente para deletar",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products": {
            "post": {
                "summary": "Cadastro de produto",
                "description": "Essa rota irá ser responsável por cadastrar os produtos",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "name": "Bolo de chocolate",
                                        "description": "Bolo de chocolate médio",
                                        "price": 200.00
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não autorizado"
                    },
                    "400": {
                        "description": "Produto já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }

            },
            "get": {
                "summary": "Buscar todos os produtos",
                "description": "Busca todos os produtos já cadastrados",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            }, 

            "delete": {
                "summary": "Deleta todos os produtos",
                "description": "Deleta todos os produtos através do Token",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "summary": "Buscar um produto pelo id",
                "description": "Busca um produto pelo id",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto para a busca",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Não autorizado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            },
            
            "delete": {
                "summary": "Deleta um produto",
                "description": "Deleta um produto através do Token",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto para deletar",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/users": {
            "post": {
                "summary": "Cadastro de usuario",
                "description": "Essa rota irá ser responsável por cadastrar os usuarios",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Levi",
                                        "cpf": "99999999999",
                                        "password": "10101010",
                                        "role": "ADMIN"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "User already exist"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }

            },

            "get": {
                "summary": "Buscar todos os usuários",
                "description": "Busca todos os usuários já cadastrados",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },

            "delete": {
                "summary": "Deleta todos os usuários",
                "description": "Deleta todos os usuários através do Token",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/users/{id}": {
            "get": {
                "summary": "Buscar um usuário pelo id",
                "description": "Busca um usuário pelo id",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do usuário para a busca",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },

            "delete": {
                "summary": "Deleta um usuário",
                "description": "Deleta um usuário através do Token",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do usuário para deletar",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/auth": {
            "post": {
                "summary": "Obtem um Token para o usuário",
                "description": "Essa rota irá ser responsável dar o Token de acesso ao usuário",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "auth": {
                                    "value": {
                                        "cpf": "999999999",
                                        "password": "10101010"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "User not exist"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }

            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "address": {
                        "type": "string"
                    }
                },
                "required": ["name", "email", "phone", "address"]
            },
            "Product": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "password": {
                        "type": "number"
                    }
                }
            },
            "Token": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            }
        }, 
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}