{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação da La Patisserie",
        "description": "Essa API tem como objetivo a manipulação dos produtos, clientes e funcionários.",
        "termsOfService": "http://localhost:3000/v1/terms",
        "contact": {
            "email": "levi.pereira.junior@ccc.ufcg.edu.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/v1",
            "description": "API de Teste"
        },
        {
            "url": "http://www.lapatisserie.com/v1",
            "description": "API de Teste"
        }
    ],
    "paths": {
        "/products": {
            "post": {
                "summary": "Cadastro de produto",
                "description": "Essa rota irá ser responsável por cadastrar os produtos",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "name": "Bolo de chocolate",
                                        "description": "Bolo de chocolate médio",
                                        "price": 200.00
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não autorizado"
                    },
                    "400": {
                        "description": "Produto já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }

            },
            "get": {
                "summary": "Buscar todos os produtos",
                "description": "Busca todos os produtos já cadastrados",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "summary": "Buscar um produto pelo id",
                "description": "Busca um produto pelo id",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Não autorizado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }

            }
        },

        "/users": {
            "post": {
                "summary": "Cadastro de usuario",
                "description": "Essa rota irá ser responsável por cadastrar os usuarios",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Levi",
                                        "cpf": "99999999999",
                                        "password": "10101010",
                                        "role": "ADMIN"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "User already exist"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }

            },

            "get": {
                "summary": "Buscar todos os usuários",
                "description": "Busca todos os usuários já cadastrados",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/users/{id}": {
            "get": {
                "summary": "Buscar um usuário pelo id",
                "description": "Busca um usuário pelo id",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }

            }
        },

        "/auth": {
            "post": {
                "summary": "Obtem um Token para o usuário",
                "description": "Essa rota irá ser responsável dar o Token de acesso ao usuário",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "auth": {
                                    "value": {
                                        "cpf": "999999999",
                                        "password": "10101010"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "User not exist"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }

            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "password": {
                        "type": "number"
                    }
                }
            },
            "Token": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            }
        }, 
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}